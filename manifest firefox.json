{
    "manifest_version": 2,
    "name": "Demonlist+",
    "version": "1.2",
    "description": "Adds many features to the pointercrate website.",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "64": "icons/icon-64.png",
        "96": "icons/icon-96.png"
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://pointercrate.com/*", 
                "https://wwww.pointercrate.com/*"
            ],
            "js": ["demonlist.js"],
            "css": ["demonlist-style.css", "demonlist-old.css"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "supporters.txt", 
                "demonlist-style.css", 
                "demonlist-old.css",
                "icons/android-chrome-192x192.png",
                "icons/android-chrome-512x512.png",
                "icons/apple-touch-icon.png",
                "icons/favicon-16x16.png",
                "icons/favicon-32x32.png",
                "icons/favicon.ico",
                "icons/site.webmanifest"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
          "id": "firefox-addon@klausapp.com",
          "update_url": "https://extension.com/update-manifest.json"
        }
    }
}